<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--<?xml version="1.0" encoding="utf-8"?>-->
    <LinearLayout
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.example.muthgergely.edzesnaplo.MainActivity">

        <EditText
            android:id="@+id/datum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Dátum (ÉÉÉÉ.H.N.)"
            android:inputType="date" />
        <EditText
            android:id="@+id/edzes_tip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Edzés típusa"
            android:inputType="text" />
        <EditText
            android:id="@+id/verseny_tip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Verseny"
            android:inputType="text" />
        <EditText
            android:id="@+id/vesszo_szam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Vessző száma"
            android:inputType="text" />
        <EditText
            android:id="@+id/pontszam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Pontszám"
            android:inputType="text" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Végrehajtás"
            android:textSize="20sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Lövés"
            android:textSize="18sp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/loves_jo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Jó [%]"
                android:inputType="number"
                android:layout_weight="1"
                android:gravity="center"/>
            <EditText
                android:id="@+id/loves_elfogadhato"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Elfogadható [%]"
                android:inputType="number"
                android:layout_weight="1"
                android:gravity="center"/>
            <EditText
                android:id="@+id/loves_rossz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Rossz [%]"
                android:inputType="number"
                android:layout_weight="1"
                android:gravity="center"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Mentális"
            android:textSize="18sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <EditText
                android:id="@+id/mentalis_feladat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Mentális feladat"
                android:inputType="text"/>
            <EditText
                android:id="@+id/mentalis_eredmeny"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Mentális eredmény"
                android:inputType="text"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Edzés előtt"
            android:textSize="20sp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <EditText
                android:id="@+id/mentalis_allapot_elotte"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Mentális állapot"
                android:inputType="text"/>
            <EditText
                android:id="@+id/fizikalis_allapot_elotte"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Fizikális állapot"
                android:inputType="text"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:text="Edzés után"
            android:textSize="20sp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <EditText
                android:id="@+id/mentalis_allapot_utana"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Mentális állapot"
                android:inputType="text"/>
            <EditText
                android:id="@+id/fizikalis_allapot_utana"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Fizikális állapot"
                android:inputType="text"/>
        </LinearLayout>
        <!--  android:lines="8" Total Lines prior display -->
        <!--  android:minLines="6" Minimum lines -->
        <!--  android:gravity="top|left" Cursor Position -->
        <!--  android:maxLines="10" -->
        <EditText
            android:id="@+id/cel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Cél az edzésre"
            android:inputType="textMultiLine"
            android:lines="8"
            android:minLines="1"
            android:gravity="top|left"
            android:maxLines="10"/>
        <EditText
            android:id="@+id/elertem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Elértem a célom?"
            android:inputType="textMultiLine"
            android:lines="8"
            android:minLines="1"
            android:gravity="top|left"
            android:maxLines="10"/>
        <EditText
            android:id="@+id/jegyzetek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Jegyzetek"
            android:inputType="textMultiLine"
            android:lines="8"
            android:minLines="1"
            android:gravity="top|left"
            android:maxLines="10"/>
        <EditText
            android:id="@+id/eszrevetel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Általános észrevételek"
            android:inputType="textMultiLine"
            android:lines="8"
            android:minLines="1"
            android:gravity="top|left"
            android:maxLines="10"/>
        <EditText
            android:id="@+id/feladat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Feladat a következő edzésre"
            android:inputType="textMultiLine"
            android:lines="8"
            android:minLines="1"
            android:gravity="top|left"
            android:maxLines="10"/>
        <EditText
            android:id="@+id/edzoi_komment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Edzői komment"
            android:inputType="text"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mentés"
            android:onClick="Mentes"
            android:layout_gravity="center"/>
    </LinearLayout>
</ScrollView>